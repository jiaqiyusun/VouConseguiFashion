<div>
  <div class="pull-right">
    <%= link_to "新建分类 criar novo categoria", new_admin_category_path, class: "btn btn-primary" %>
  </div>

  <h1>
    <% if @category %>
      分类/Categoria:<%= @category.title %>(<%= @categories.total_entries %>)
    <% else %>
      分类/Categoria(<%= @categories.total_entries %>)
    <% end -%>
  </h1>
</div>

<div>
  <table class="table table-striped">
    <tr>
      <th>ID</th>
      <th>名称/Titulo</th>
      <th>Weight</th>
      <th></th>
    </tr>

    <% @categories.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td><%= category.title %></td>
        <td><%= category.weight %></td>
        <td align="right">
          <%= link_to "编辑/edit", edit_admin_category_path(category) %>
          <% if category.root? %>
            <%= link_to "查看子分类/Ver o filho categoria", admin_categories_path(id: category) %>
          <% end -%>
        </td>
      </tr>
    <% end -%>
  </table>

  <%= will_paginate @categories %>
</div>
